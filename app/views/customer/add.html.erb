                            </div>
                             </div>
                             <div class="row justify-content-center" >
                            <div class="col-md-12 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                <%= f.text_field :cnic,:class=>"form-control", :placeholder=>"CNIC", :type=>"text" %>
